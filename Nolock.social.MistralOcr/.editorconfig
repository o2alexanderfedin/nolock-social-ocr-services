root = true

[*.cs]
# IDE0001: Simplify name
dotnet_diagnostic.IDE0001.severity = error

# IDE0002: Simplify member access
dotnet_diagnostic.IDE0002.severity = error

# IDE0003: Remove this or Me qualification
dotnet_diagnostic.IDE0003.severity = error

# IDE0004: Remove unnecessary cast
dotnet_diagnostic.IDE0004.severity = error

# IDE0005: Remove unnecessary imports
dotnet_diagnostic.IDE0005.severity = error

# IDE0007: Use 'var' instead of explicit type
dotnet_diagnostic.IDE0007.severity = none

# IDE0008: Use explicit type instead of 'var'
dotnet_diagnostic.IDE0008.severity = none

# IDE0009: Add this or Me qualification
dotnet_diagnostic.IDE0009.severity = none

# IDE0011: Add braces
dotnet_diagnostic.IDE0011.severity = error

# IDE0017: Use object initializers
dotnet_diagnostic.IDE0017.severity = suggestion

# IDE0028: Use collection initializers
dotnet_diagnostic.IDE0028.severity = suggestion

# IDE0029: Use coalesce expression
dotnet_diagnostic.IDE0029.severity = suggestion

# IDE0030: Use coalesce expression
dotnet_diagnostic.IDE0030.severity = suggestion

# IDE0031: Use null propagation
dotnet_diagnostic.IDE0031.severity = suggestion

# IDE0041: Use is null check
dotnet_diagnostic.IDE0041.severity = suggestion

# IDE0060: Remove unused parameter
dotnet_diagnostic.IDE0060.severity = error

# IDE0063: Use simple using statement
dotnet_diagnostic.IDE0063.severity = suggestion

# IDE0090: Use 'new(...)' - Simplify new expression (target-typed)
dotnet_diagnostic.IDE0090.severity = error

# Additional style rules for redundant type specifications
csharp_style_object_creation_when_type_is_apparent = target_typed:error
csharp_style_object_creation_when_type_is_not_apparent = target_typed:suggestion

# CA1050: Declare types in namespaces
dotnet_diagnostic.CA1050.severity = error

# CA1062: Validate arguments of public methods
dotnet_diagnostic.CA1062.severity = error

# CA1515: Make public types internal when possible (disabled for web apps)
dotnet_diagnostic.CA1515.severity = none

# CA1000: Do not declare static members on generic types (common pattern for factory methods)
dotnet_diagnostic.CA1000.severity = none

# CA1056: URI properties should not be strings (needed for JSON serialization)
dotnet_diagnostic.CA1056.severity = none

# CA1859: Use concrete types for improved performance (interface usage is intentional)
dotnet_diagnostic.CA1859.severity = none

# IL2026 & IL3050: AOT warnings for JSON serialization (will address with source generation later)
dotnet_diagnostic.IL2026.severity = none
dotnet_diagnostic.IL3050.severity = none

# CA1002: Do not expose generic lists (needed for JSON serialization)
dotnet_diagnostic.CA1002.severity = none

# CA2227: Collection properties should be read only (needed for JSON deserialization)
dotnet_diagnostic.CA2227.severity = none

# CA1720: Identifiers should not contain type names (Object is API field name)
dotnet_diagnostic.CA1720.severity = none

# CA1031: Do not catch general exception types (appropriate for API endpoints)
dotnet_diagnostic.CA1031.severity = none

# CA2234: Pass System.Uri objects instead of strings (string is more convenient)
dotnet_diagnostic.CA2234.severity = none

# CA1054: URI parameters should not be strings (needed for flexibility)
dotnet_diagnostic.CA1054.severity = none

# CA1852: Seal internal types
dotnet_diagnostic.CA1852.severity = suggestion

# CA2208: Instantiate argument exceptions correctly
dotnet_diagnostic.CA2208.severity = error

# CS8019: Unnecessary using directive
dotnet_diagnostic.CS8019.severity = error

# CA2007: Do not directly await a Task
dotnet_diagnostic.CA2007.severity = none

# CA2000: Dispose objects before losing scope
dotnet_diagnostic.CA2000.severity = error

# IDE0067: Dispose objects before losing scope
dotnet_diagnostic.IDE0067.severity = error

# IDE0068: Use recommended dispose pattern
dotnet_diagnostic.IDE0068.severity = error

# CA1849: Call async methods when in an async method
dotnet_diagnostic.CA1849.severity = error

# VSTHRD103: Use AsyncDisposable
dotnet_diagnostic.VSTHRD103.severity = error

# Redundant type specification
dotnet_diagnostic.IDE0001.severity = error

# Code style rules
dotnet_style_prefer_auto_properties = true:error
dotnet_style_prefer_conditional_expression_over_return = false:suggestion
dotnet_style_prefer_inferred_tuple_names = true:error
dotnet_style_prefer_inferred_anonymous_type_member_names = true:error

# C# code style settings
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion

# Target-typed new expressions
csharp_style_implicit_object_creation_when_type_is_apparent = true:error